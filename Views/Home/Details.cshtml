@{
    ViewBag.Title = "Home Page";
}

@section Styles
{
    <style type="text/css">
        .product_details_container {
            display: flex;
        }

        .product_details {
            display: grid;
            grid-template-columns: 2fr 1fr;
            flex: 1;
            gap: 1rem;
            flex-direction: row;
            background-color: whitesmoke;
            padding: 1rem;
            .image_wrapper

        {
            display: flex;
            height: 80vh;
            justify-content: center;
            padding: 1rem 0;
            img

        {
            height: 100%;
        }

        }

        .product_info {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            .product_title

        {
            font-weight: bold;
        }

        .product_price {
            font-weight: bold;
        }

        }


        .product_desc {
            color: dimgray;
        }

        }

        .product_item:hover {
            border: 1px solid gray;
            .image_wrapper img

        {
            transform: scale(1.05);
            transition: all 0.3s ease;
        }
        }

    </style>
}
<main>
     <div class="row">
        <section class="col-md-12" aria-labelledby="productCataloge">
            <div class="product_details_container">
                <div class="product_details">
                    <div class="image_wrapper">
                        <img src="@ViewBag.article.image_url" />
                    </div>
                    <div class="product_info">
                        <span>@ViewBag.article.sku</span>
                        <h1 class="product_title">@ViewBag.article.name</h1>
                        <h3 class="product_price">@ViewBag.article.price</h3>
                        <span class="product_desc">@ViewBag.article.description</span>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>